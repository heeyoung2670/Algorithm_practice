# 음료수 얼려 먹기
n, m = map(int, input().split())

data = []
for _ in range(n):
    data.append(list(map(int, input())))

def dfs(x, y):
    if x<= -1 or x>= n or y<= -1 or y>= m:
        return False
    if data[x][y] == 0:
        data[x][y] = 1
        dfs(x-1, y)
        dfs(x, y-1)
        dfs(x+1, y)
        dfs(x, y+1)
        return True
    return False

res = 0
for i in range(n):
    for j in range(m):
        if dfs(i, j) == True:
            res += 1
print(res)
